<div class="well" style="text-align:center;">
  <% if !devise_error_messages!.empty? %>
    <div class="alert alert-danger" style="align:center;" role="alert">
      <% devise_error_messages!.each do |message| %>
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        <%= message %>
      <% end %>
    </div>
  <% end %>
  
  <h2>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, :placeholder => "Enter email" %>
  </div>

  <div class="field" style="margin-top:0.4em;">
    <% placeholder_string = "Enter password (" + @minimum_password_length.to_s + " characters min. )" %>
    <%= f.password_field :password, autocomplete: "off", :placeholder => placeholder_string %>
  </div>

  <div class="field" style="margin-top:0.4em;">
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Enter password again" %>
  </div>

  <div class="actions" style="margin-top:0.4em;">
    <%= f.submit "Sign up", :class => "btn btn-primary" %>
  </div>
  <% end %>
</div>

