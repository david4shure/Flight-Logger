<div class="well" style="text-align:center;">

  <% if !devise_error_messages!.empty? %>
    <div class="alert alert-danger" style="align:center;" role="alert">
      <% devise_error_messages!.each do |message| %>
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        <%= message %>
      <% end %>
    </div>
  <% end %>

<h2 style="text-align:center;">Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div>
    <%= f.email_field :email, autofocus: true, :placeholder => "Enter Email" %>
  </div>

  <div style="margin-top:0.4em;">
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Enter Password" %>
  </div>
  
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :class => "btn btn-primary" %>
  </div>
<% end %>
</div>
