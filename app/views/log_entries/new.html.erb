    <%= f.text_field :type_of_flight, :placeholder => "Type of Flight", :size => 10, :style => style_string %>
    <%= f.text_field :prop, :placeholder => "Prop", :size => 10, :style => style_string %>
    <%= f.text_field :jet, :placeholder => "Jet", :size => 10, :style => style_string %>
    <%= f.text_field :turbine_time, :placeholder => "Turbine Time", :size => 10, :style => style_string %>
    <%= f.text_field :single_engine_land, :placeholder => "Single Engine Land", :size => 10, :style => style_string %>
    <%= f.text_field :single_engine_sea, :placeholder => "Single Engine SeaPlane", :size => 10, :style => style_string %>
    <%= f.text_field :multi_engine_land, :placeholder => "Multi Engine Land", :size => 10, :style => style_string %>
