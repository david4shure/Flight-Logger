    <%= f.text_field :touch_and_gos, :placeholder => "Touch & Go's", :size => 10, :style => style_string %>
    <%= f.text_field :day_landings, :placeholder => "Day Landings", :size => 10, :style => style_string %>
    <%= f.text_field :night_landings, :placeholder => "Night Landings", :size => 10, :style => style_string %>
    <%= f.text_field :nvg_takeoffs, :placeholder => "NVG Takeoffs", :size => 10, :style => style_string %>
    <%= f.text_field :nvg_landings, :placeholder => "NVG Landings", :size => 10, :style => style_string %>
